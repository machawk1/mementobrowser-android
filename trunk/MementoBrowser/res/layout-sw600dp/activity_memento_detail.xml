<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MementoDetailActivity" >


    <TextView
        android:id="@+id/originalUrlLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/detail_original_url"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/originalUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originalUrlLabel"
        android:layout_below="@+id/originalUrlLabel"
        android:autoLink="web"
        android:text="http://foo.org/"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/mementoUrlLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originalUrl"
        android:layout_below="@+id/originalUrl"
        android:layout_marginTop="18dp"
        android:text="@string/detail_memento_url"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/mementoUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originalUrlLabel"
        android:layout_below="@+id/mementoUrlLabel"
        android:autoLink="web"
        android:text="http://memento.lanl.gov/foo.org/"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/mementoDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originalUrl"
        android:layout_below="@+id/mementoUrl"
        android:layout_marginTop="18dp"
        android:text="@string/detail_memento_date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/mementoDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originalUrlLabel"
        android:layout_below="@+id/mementoDateLabel"
        android:text="2010-02-15"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/archiveLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originalUrl"
        android:layout_below="@+id/mementoDate"
        android:layout_marginTop="18dp"
        android:text="@string/detail_archive_source"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/archiveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originalUrlLabel"
        android:layout_below="@+id/archiveLabel"
        android:text="Internet Archive"
        android:textAppearance="?android:attr/textAppearanceSmall" />
       
    <TextView
        android:id="@+id/archiveUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originalUrlLabel"
        android:layout_below="@+id/archiveName"
        android:autoLink="web"
        android:text="http://archive.org/"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>